{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Planning Scheduler",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/src/planningScheduler/run.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "name": "Web Client",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/src/webClient/run.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "name": "Blackbox",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/src/blackBox/run.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "name": "Forklift",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/src/forklifts/run.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Transpile",
            "program": "",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha PlanningScheduler",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "--require",
                "ts-node/register",
                "${workspaceFolder}/test/planningScheduler/**/*.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "--require",
                "ts-node/register",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Launch entire project",
            "configurations": [
                "Planning Scheduler",
                "Blackbox",
                "Forklift",
                "Web Client"
            ]
        }
    ]
}